# Server
PORT=3001
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=mercadopago

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=your_access_token_here
# Forzar modo prueba (opcional): true = modo prueba, false o sin definir = auto-detectado basado en sandbox_init_point
